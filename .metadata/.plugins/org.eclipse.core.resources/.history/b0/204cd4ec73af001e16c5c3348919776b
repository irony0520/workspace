package javaquestion;

public class JavaQuestion61 {
	
	int num;
	boolean isKwang;
	
	
	
	
//	JavaQuestion61(); {
//		
//	}
//	
  void card1() {
	 num = 3;
	 isKwang = false;
	 
 }
  
  void card2() {
	  num = 1;
	  isKwang = true;
  }
	
  String info() {
	  if(this.isKwang == true) {
		  return this.num + " ";
	  }else {
		  return this.num + "K";  
	  }
	  

  }
	
	
}

