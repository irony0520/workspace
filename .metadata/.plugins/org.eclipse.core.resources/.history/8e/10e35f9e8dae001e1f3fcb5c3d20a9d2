package Question;

import java.util.Scanner;

public class QNine {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int sum = 0;
		int number = 0;
		int classes = 0;
		int scores = 0;
		int array[] = new int[classes];
		
		do {
		System.out.print("1.학생수 2.점수입력 3.점수리스트 4.분석 5.종료");	
		Scanner scanner = new Scanner(System.in);
		System.out.println("\n선택 -->");	
		number = scanner.nextInt();
		
		switch(number) {
		case 1: 
		System.out.print("학생수-->");
		classes = scanner.nextInt();
		break;
		
		case 2:
			
			for(int i = 0; i<classes;i++) {
				
				scores = scanner.nextInt();
				System.out.println("scores[" + array[classes]+ "]");
				
			}
			break;
			
				
		case 3: 
			
			for(int i = 0; i<classes;i++) {
				System.out.println("scores[" + classes + "] :" + scores);
			
			}
			break;
		case 4: 
			for(int i = 0; i<classes;i++) {
				System.out.println((sum += array[classes])/classes);
				
			}
			break;
			
		case 5:
			System.out.println("프로그램 종료");
			break;
			
				
		}
		
		}while(number!=5);
	}

}
