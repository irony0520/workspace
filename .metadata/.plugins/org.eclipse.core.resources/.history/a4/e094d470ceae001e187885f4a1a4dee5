package ch06;

public class Calculator {

	//불리안

	boolean power = false;
	
	void powerOn() {
		this.power = true;
		System.out.println("전원을 켭니다.");
	}
	//메서드 생성 void라 리턴값 없어도 됨
	
	void powerOff() {
		this.power = false;
		System.out.println("전원을 끕니다.");
	}
	
	
	int plus(int x, int y) {
		int result = 0;
		if(power) {
			result = x+y;
			
		}
		else { 
			System.out.println("전원이 꺼져있습니다.");
		}
		return result;
	}
	
	int minus(int x, int y) {
		int result = 0;
		if(power) {
			result = x-y;
		}
		else { 
			System.out.println("전원이 꺼져있습니다.");
		}
		return result;
	}
}
